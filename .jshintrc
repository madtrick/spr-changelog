  "quotmark": "single",
  "curly": true,
  "eqeqeq": true,
  "forin": true,
  "indent": 2,
  "immed": true,
  "latedef": "nofunc",
  "newcap": true,
  "noempty": true,
  "nonbsp": true,
  "unused": true,
  "strict": true,
  "maxdepth": 3,
